<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/primary_dark_material_dark"
    tools:context="com.example.guanqing.spotifystreamer.TopTrackFragment"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:id="@+id/artist_thumbnail"

        android:adjustViewBounds="true"
        android:maxHeight="144dp"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/artist_thumbnail"
        android:alpha="0.9"/>

    <ListView
        android:id="@+id/top_track_listView"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:background="@color/primary_dark_material_dark"
        android:layout_height="match_parent"/>

</LinearLayout>

