<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/primary_dark_material_dark"
    tools:context="com.example.guanqing.spotifystreamer.DetailActivityFragment"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:id="@+id/artist_thumbnail"
        android:src="@drawable/cover"
        android:adjustViewBounds="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:maxHeight="112dp"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:alpha="0.9"/>

    <ListView
        android:id="@+id/top_track_listView"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"></ListView>

</LinearLayout>

